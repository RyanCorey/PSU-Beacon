# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /exams                      controllers.ExamController.getExams()
+ nocsrf
POST    /exams/:id/question/add         controllers.ExamController.addQuestion(id: Long, request: Request)
GET     /exams/:id                  controllers.ExamController.getExam(id: Long, request: Request)
GET     /results                    controllers.ExamResultsController.index()
#GET     /results/:id                controllers.ExamResultsController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
